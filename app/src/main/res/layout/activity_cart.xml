<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="100">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_weight="20"
                android:src="@mipmap/five" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tvPname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 Mukhi Rudraksha Nepali"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unit Price - â‚¹840.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/liAddTocart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/button_id_1"
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:layout_gravity="center"

                        android:paddingHorizontal="0dp"
                        android:textAllCaps="false"
                        android:background="#0789C5"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/productQuantityTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="15"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="17"
                        android:background="@color/purple_500"
                        android:text="+"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
